<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_activity"
    tools:context="developersudhanshu.com.udacitypracticalquizone.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_x_large_20dp"
        android:paddingRight="@dimen/padding_x_large_20dp"
        android:textColorHint="@android:color/black"
        android:layout_below="@+id/toolbar_activity_main"
        android:layout_marginTop="@dimen/margin_small_5dp">
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/ic_person"
        android:hint="@string/username"
        android:drawablePadding="@dimen/padding_small_5dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_x_large_20dp"
        android:paddingRight="@dimen/padding_x_large_20dp"
        android:textColorHint="@android:color/black"
        android:layout_below="@+id/til_person"
        android:layout_marginTop="@dimen/margin_small_5dp">
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_mail"
            android:hint="@string/email"
            android:drawablePadding="@dimen/padding_small_5dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_x_large_20dp"
        android:paddingRight="@dimen/padding_x_large_20dp"
        android:textColorHint="@android:color/black"
        android:layout_below="@+id/til_email"
        android:layout_marginTop="@dimen/margin_small_5dp">
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_description"
            android:hint="@string/description"
            android:drawablePadding="@dimen/padding_small_5dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_x_large_20dp"
        android:textColor="#FFF"
        android:background="@color/colorPrimaryDark"
        android:text="@string/submit_btn_text"/>

</RelativeLayout>
